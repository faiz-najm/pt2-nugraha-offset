<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_mainFragment">

    <fragment
        android:id="@+id/nav_mainFragment"
        android:name="com.d3if4503.typewriter.activities.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_nav_mainFragment_to_nav_profileFragment"
            app:destination="@id/nav_profileFragment" />
        <action
            android:id="@+id/action_nav_mainFragment_to_nav_aboutUsFragment"
            app:destination="@id/nav_aboutUsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_profileFragment"
        android:name="com.d3if4503.typewriter.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_aboutUsFragment"
        android:name="com.d3if4503.typewriter.AboutUsFragment"
        android:label="About Us"
        tools:layout="@layout/fragment_about_us"/>
</navigation>